# Paths
P=(
  /usr/local/opt/go/libexec/bin
  /usr/local/opt
  /usr/local/bin
  /usr/local/opt/postgresql@10/bin
  $HOME/.rvm/bin
  $HOME/.fastlane/bin
  $ANDROID_HOME/tools
  $ANDROID_HOME/platform-tools
  $PATH
)

PATH=$(IFS=:; echo "${P[*]}")
export PATH

# SSH
ssh-add -K ~/.ssh/id_rsa ~/.ssh/unicorn ~/.ssh/ecs_root_ssh.priv &>/dev/null

# Git
source /Library/Developer/CommandLineTools/usr/share/git-core/git-completion.bash
source /Library/Developer/CommandLineTools/usr/share/git-core/git-prompt.sh

# Android
export ANDROID_HOME=${HOME}/Library/Android/sdk

# React
export REACT_EDITOR=atom

# Postgres
alias pgstart='pg_ctl -D /usr/local/var/postgresql -l /usr/local/var/postgresql/server.log start'
alias pgstop='pg_ctl -D /usr/local/var/postgresql stop -s -m fast'

# Terraform
if [[ -f /usr/local/share/chtf/chtf.sh ]]; then
  source "/usr/local/share/chtf/chtf.sh"
fi

# NVM
export NVM_DIR=~/.nvm
source $(brew --prefix nvm)/nvm.sh

# Alias and functions
alias t='bundle exec rspec'

# Node
export NODE_PATH=/usr/local/lib/node_modules
export NODE_ENV=development

# OSX
export BASH_SILENCE_DEPRECATION_WARNING=1

# Secrets
source ~/.bash_secrets

# Host completion
_complete_hosts () {
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    host_list=`{
        for c in /etc/ssh_config /etc/ssh/ssh_config ~/.ssh/config
        do [ -r $c ] && sed -n -e 's/^Host[[:space:]]//p' -e 's/^[[:space:]]*HostName[[:space:]]//p' $c
        done
        sed -n -e 's/^[0-9][0-9\.]*//p' /etc/hosts; }|tr ' ' '\n'|grep -v '*'`
    COMPREPLY=( $(compgen -W "${host_list}" -- $cur))
    return 0
}
complete -F _complete_hosts ssh
complete -F _complete_hosts host
